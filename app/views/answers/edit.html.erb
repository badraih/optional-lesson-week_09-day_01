<%= form_with scope: :answer, url: answer_update_path(params[:q]) , :class => 'pt-5 form-group', method: :put, local:true do |form| %>

  <div class="form-group">
    <label for="answer">Add an answer</label>
    <%= form.text_area :text, :class => 'form-control', :placeholder => 'What is your Question?', :rows => "3" %>
  </div>

  <%= form.hidden_field :question_id, value: params[:q] %>
  <%= form.submit 'Update the answer', :class => 'btn btn-primary mb-2' %>

  <%= link_to  answers_index_path(params[:q]) do %>
    <button class="btn btn-primary mb-2"> Cancel </button>
  <% end %>
<% end %>